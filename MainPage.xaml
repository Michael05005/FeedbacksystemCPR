<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PA_CPR_UI.MainPage"
             Title="CPR Steps for Adults:">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="7">

            <!-- Header -->
            <Label Text="DR/ABC"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0,0,0,-10" />

            <!-- D – Danger -->
            <Label Text="D – Danger" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label Text="→ Scene safe for you &amp; the victim?" FontSize="18" />

            <!-- R – Response -->
            <Label Text="R – Response" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label Text="• Tap and shout" FontSize="18" />
            <Label Text="→ Any response?" FontSize="18" />

            <!-- Step 1 (A – Airway) -->
            <Label Text="A – Airway" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label Text="• Lay the person on their back" FontSize="18" />
            <Label Text="• Tilt head, lift chin; clear obstruction" FontSize="18" />
            <Label Text="→ Airway open &amp; clear?" FontSize="18" />

            <!-- Step 2 (B – Breathing) -->
            <Label Text="B – Breathing" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label Text="• Check breathing ≤10 s:  look, listen, feel" FontSize="18" />
            <Label Text="→ Breathing present &amp; normal?" FontSize="18" />

            <!-- Step 2 (C – Circulation) -->
            <Label Text="C – Circulation (optional!)" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label Text="• Check carotid/radial pulse ≤10 s (if trained)." FontSize="18" />
            <Label Text="→ Pulse present ?" FontSize="18" />

            <!-- Decision block -->
            <Label Text="Decision:" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0" />
            <Label FontSize="18">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="• Answers 'no'? → call EMS (112/911) &amp; " FontAttributes="Bold" />
                        <Span Text="START CPR NOW ⬇️" TextColor="Red" FontAttributes="Bold" />
                        <Span Text="." FontAttributes="Bold" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label Text="• Rule: 30 compressions (5–6 cm, 100–120/min) + 2 breaths  (if trained). Use AED ASAP." FontSize="18" />

            <!-- CPR - Button -->
            <Button Text="Start CPR!"
                    Clicked="OnCPRButton1Clicked"
                    BackgroundColor="Purple"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="75"
                    WidthRequest="300"
                    HorizontalOptions="Center"
                    Margin="0,30,0,0"
                    FontSize="22"
                    />

        </VerticalStackLayout>
    </ScrollView>



</ContentPage>
