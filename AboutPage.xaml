<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PA_CPR_UI.AboutPage"
             Title="About">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="5">
            <Label 
                Text="This app was created as a project at Pforzheim University in the Bachelor program of Medical Engineering."
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,0"/>
            <Label 
                Text="The team: Sanjita Basnet, Michael Kiryokoz, Jan Klittich and Nico Reim."
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,40"/>

            <Label 
                Text="The app uses the smartphoneâ€™s accelerometer sensor."
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,0"/>
            <Label 
                Text="It calculates the compression depth with double integration and filtering."
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,0"/>
            <Label 
                Text="From this, it also measures the compression rate."
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,40"/>

            <Label 
                Text="The app gives feedback during CPR."
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,0"/>
            <Label 
                Text="This helps the user perform better chest compressions."
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,40"/>

            <Label 
                Text="Development started: July 2025"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,40"/>

            <Label 
                Text="Project submitted: ??"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,40"/>

            <Label 
                Text="First version released: ??"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,50"/>


            <Label 
                Text="Patches:"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                TextDecorations="Underline"
                FontAttributes="Bold"
                Margin="0,50,0,0"/>
            <Label 
                Text="No patches yet."
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                Margin="0,0,0,40"/>


            <Label 
                Text="Links:"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="20"
                TextDecorations="Underline"
                FontAttributes="Bold"
                Margin="0,50,0,10"/>
            <Button 
                Text="Open Link to Pforzheim University"
                Command="{Binding OpenLinkCommand}"
                CommandParameter="https://www.hs-pforzheim.de/en/"
                HorizontalOptions="Start"/>


        </VerticalStackLayout>
    </ScrollView>


</ContentPage>